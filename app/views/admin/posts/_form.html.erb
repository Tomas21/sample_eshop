<% if @post.errors.any? %>
  <div class="panel panel-danger">
    <div class="panel-heading">
      Formul√°r obsahuje chyby
    </div>

    <div class="panel-body">
      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  </div>
<% end %>


<%= form_for [:admin, @post] do |f| %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category_id %>
    <%= f.select :category_id, Category.all.map{ |c| [c.name, c.id] }, {prompt: "Vyber"}, {class: "form-control"} %>
  </div>

  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control ckeditor", rows: 10 %>
  </div>

  <div class="form-group">
    <%= f.check_box :published %>
    <%= f.label :published %>
  </div>

  <%= f.submit nil, class: "btn btn-primary" %>

<% end %>