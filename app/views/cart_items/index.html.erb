<h1><%= t('.title') %></h1>

<% if @items.empty? %>
  <div class="alert alert-info">
    <%= t(".empty_cart") %>
  </div>
<% else %>
  <table class="table">
    <thead>
      <tr>
        <th>Produkt</th>
        <th>Ks</th>
        <th>Cena</th>
        <th>Cena spolu</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <%= render partial: 'item', collection: @items %>
    </tbody>
  </table>

  <%= button_to "Objednat produkty v košíku", orders_path, class: 'btn btn-primary', data: { confirm: 'Kliknutim na OK potvrdte objednavku.' } %>
<% end %>














